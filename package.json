{
  "name": "tap-or-tarp",
  "version": "1.0.0",
  "description": "Browser-based Magic: The Gathering game timer with server-authoritative time tracking",
  "main": "server.js",
  "scripts": {
    "start": "NODE_ENV=production node server.js",
    "dev": "node server.js",
    "lint": "eslint server.js public/client.js",
    "format": "prettier --write server.js public/*.js public/*.html public/*.css",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "keywords": [
    "mtg",
    "magic",
    "timer",
    "websocket"
  ],
  "author": "MTG Timer Contributors",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/onat_/tap-or-tarp.git"
  },
  "bugs": {
    "url": "https://github.com/onat_/tap-or-tarp/issues"
  },
  "homepage": "https://github.com/onat_/tap-or-tarp#readme",
  "dependencies": {
    "@sentry/node": "^8.47.0",
    "better-sqlite3": "^11.7.0",
    "express": "^4.18.2",
    "pino": "^9.6.0",
    "prom-client": "^15.1.3",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "jest": "^30.2.0",
    "pino-pretty": "^13.0.0",
    "prettier": "^3.2.5"
  }
}
